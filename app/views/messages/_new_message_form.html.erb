<%= simple_form_for [@single_room, @message],
  html: {
    class: "msg-form w-full max-w-2xl mx-auto px-4 py-5 flex items-center gap-2 bg-base-100 border-t border-primary fixed bottom-16 left-1/2 transform -translate-x-1/2 z-40",
    data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }
  } do |f| %>
  <div class="flex-grow">
    <%= f.input :body,
      label: false,
      input_html: {
        id: 'chat-text',
        class: 'textarea-bordered w-full bg-base-200 pt-2',
        placeholder: "Say somethingâ€¦"
      } %>
  </div>
  <div class="form-actions pb-3">
    <%= f.button :submit, "Send", class: "btn btn-primary btn-md md:btn-md lg:btn-lg xl:btn-xl" %>
  </div>
<% end %>
