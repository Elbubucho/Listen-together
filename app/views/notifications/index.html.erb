  <%= turbo_stream_from "notifications_#{current_user.id}_list", id: "notification_stream" %>
    <div id="notification-list" class="bg-white shadow-lg rounded">
      <div class="p-4 space-y-2">
        <% if @notifications.any? %>
          <%= render @notifications.order(created_at: :desc) %>
        <% else %>
          <p class="text-gray-500">No notification yet.</p>
        <% end %>
      </div>
    </div>
