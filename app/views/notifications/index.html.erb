  <%= turbo_stream_from "notifications_#{current_user.id}_list", id: "notification_stream" %>
    <div class="bg-base-100 shadow-lg rounded">
      <div class="text-center font-bold text-1xl pt-3"> Notifications</div>
      <div id="notification-list" class="p-4 space-y-2">
        <% if @notifications.any? %>
          <%= render @notifications.order(created_at: :desc), current_user: current_user %>
        <% else %>
          <p class="text-gray-500">No notification yet.</p>
        <% end %>
      </div>
    </div>
