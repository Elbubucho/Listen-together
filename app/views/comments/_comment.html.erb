<div id="comment-<%= comment.id %>" class="comment">
<%= link_to user_path(comment.user), class: "block" do %>
  <%= render "shared/avatar", user: comment.user %>
    <div class="flex-1 min-w-0">
      <div class="font-semibold truncate text-shadow-md"><%= comment.user.username.capitalize %></div>
    </div>
  <% end %>
  <p class="list-col-wrap text-xs">
    <%= comment.content %>
  </p>
  <div class="p-4 pb-2 text-xs opacity-60 tracking-wide">
    <%= time_ago_in_words(comment.created_at) %> ago
  </div>
</div>
