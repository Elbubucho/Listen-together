<% if notice %>
  <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative m-1" role="alert">
    <span class="block sm:inline"><%= notice %></span>
  </div>
<% end %>
<% if alert %>
  <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative m-1" role="alert">
    <span class="block sm:inline"><%= alert %></span>
  </div>
<% end %>
