<div class="flex flex-col items-center text-center w-full">
  <h3 class="text-lg font-bold text-center mb-4">Filters</h3>

  <div class="flex justify-center gap-4 mb-6">
    <%= link_to "All posts", posts_path, class: "btn btn-primary" %>
    <%= link_to "Friends only", posts_path(friends_only: true), class: "btn btn-primary" %>
  </div>

  <div class="flex flex-col gap-4">
    <div>
      <h4 class="text-md font-semibold mb-2">Moods</h4>
      <ul class="flex flex-col gap-2">
        <% Post::MOODS.each do |mood| %>
          <li>
            <%= link_to mood, posts_path(mood: mood), class: "btn btn-primary w-[240px] text-center" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
