<button class="btn btn-primary" onclick="my_modal_1.showModal()">
  Filters
</button>
<dialog id="my_modal_1" class="modal">
  <div class="modal-box w-full max-w-2xl">
    <h3 class="text-2xl font-bold text-center mb-4">Filters</h3>
    <div class="flex justify-center gap-4 mb-6">
      <%= link_to "All posts", posts_path, class: "btn btn-primary" %>
      <%= link_to "Friends only", posts_path(friends_only: true), class: "btn btn-primary" %>
    </div>
    <div class="flex flex-col md:flex-row gap-8">
      <div class="flex-1">
        <h4 class="text-lg font-semibold mb-3 text-left">Moods</h4>
        <ul class="flex flex-col gap-2">
          <% Post::MOODS.each do |mood| %>
            <li>
              <%= link_to mood, posts_path(mood: mood), class: "btn btn-primary w-full" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="modal-action mt-6">
      <form method="dialog">
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
</dialog>
