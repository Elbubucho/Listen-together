<div class="min-h-screen bg-base-100 px-4 py-10">
  <fieldset class="bg-base-200 border border-base-300 rounded-xl shadow-lg p-6 w-full max-w-md mx-auto">
    <legend class="text-xl font-bold text-base-content mb-6 text-center">Sign up</legend>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs space-y-4">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input input-bordered w-full" },
                    label_html: { class: "text-base-content font-semibold" } %>
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username", class: "input input-bordered w-full"},
                    label_html: { class: "text-base-content font-semibold" } %>
        <%= f.input :avatar, as: :file,
                    input_html: { class: "file-input file-input-bordered w-full" },
                    label_html: { class: "text-base-content font-semibold" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "input input-bordered w-full" },
                    label_html: { class: "text-base-content font-semibold" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "input input-bordered w-full" },
                    label_html: { class: "text-base-content font-semibold" } %>
      </div>

      <div class="form-actions mt-6">
        <%= f.button :submit, "Sign up", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-1">
      <%= render "devise/shared/links" %>
    </div>
  </fieldset>
</div>
