<% content_for :meta_title, "#{@post.user.username.capitalize}'s post â€“ Listen Together" %>
<% content_for :meta_description, truncate(@post.content, length: 140) %>

<% if @post.cover_url.present? %>
  <% content_for :meta_image, @post.cover_url %>
<% else %>
  <% content_for :meta_image, "logo-together.png" %>
<% end %>



<div class="flex items-center justify-center py-10 bg-base-100">
  <div class="card border border-l-2 border-primary bg-base-200 w-96 shadow-md">
    <div class="card-body">
      <h2 class="card-title font-bold text-2xl mb-2 text-center text-shadow-md">
          <% avatar_and_name = render("shared/avatar", user: @post.user) + " #{@post.user.username.capitalize}'s" %>
          <%= link_to avatar_and_name.html_safe, user_path(@post.user), class: "block" %>
      </h2>
      <span class= "font-bold pl-10"><%= @post.mood %></span>
      <p class="text-xl mb-4"><%= @post.content %></p>

      <div class="flex justify-center my-4">
        <iframe src="https://open.spotify.com/embed/track/<%= @post.track_id %>"
                width="300" height="80" frameborder="0"
                allowtransparency="true" allow="encrypted-media">
        </iframe>
      </div>

      <div class="text-center">
        <%= render partial: "reactions/button", locals: { post: @post, reaction: @reaction } %>
      </div>
      <% if @post.user == current_user %>
        <div class="absolute top-2 right-2">
          <%= button_to post_path(@post), method: :delete,
                        data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                        class: "text-error hover:text-red-700 transition" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M6 18L18 6M6 6l12 12" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flex flex-col items-center justify-center max-w-3xl mx-auto">
  <div class="w-full max-w-3xl mx-auto mb-6">
    <h3 class="text-2xl font-semibold mb-4 text-center text-shadow-lg">Leave a comment...</h3>
      <div id="new-comment-form">
        <%= render "comments/form", post: @post %>
      </div>
  </div>

  <p class="p-4 pb-2 font-bold text-shadow-md">Comments</p>
    <div id="comments" class="list bg-base-200 rounded-box shadow-md w-95">
    <% @post.comments.order(id: :desc).each do |comment|%>
      <%= render "comments/comment", comment: comment %>
    <% end %>
    </div>
</div>
