<div class="flex items-center justify-center min-h-screen bg-base-100 my-25">
  <div class="card w-full max-w-3xl h-[700px] md:h-[800px] bg-base-200 shadow-xl flex flex-col">
    <figure class="flex-shrink-0">
      <img src="<%= @post.cover_url %>" alt="cover" class="object-contain w-full h-72 md:h-96 pt-5"/>
    </figure>
    <div class="flex flex-col items-center text-center flex-1">
      <h1 class="card-title text-3xl font-bold mb-2">
        <%= @post.user.username %>'s <%= @post.mood %> mood
      </h1>
      <h2 class="text-xl mb-4"><%= @post.content %></h2>
        <button class="btn btn-primary text-2xl">ðŸ’—</button>
    </div>
  </div>
</div>

<div class="flex flex-col items-center justify-center px-4 py-6 max-w-3xl mx-auto">
  <h3 class="text-2xl font-semibold mb-4">Leave a comment...</h3>

  <p>Form ici</p>

  <h2 class="text-xl font-bold mt-8 mb-4">Comments</h2>
  <ul class="w-full space-y-3">
    <% @post.comments.each do |comment| %>
      <li class="border rounded p-3 bg-base-100 shadow-sm">
        <strong><%= comment.user.username %> :</strong> <%= comment.content %>
      </li>
    <% end %>
  </ul>
</div>
