<div id="chatroom_container" class="flex flex-wrap -mx-2">
  <div class="w-full sm:w-1/3 md:w-1/3 px-2">
    <h5  class="font-bold capitalize text-3xl text-center"> <%= current_user.username %></h5>
    <h4 class="font-bold text-1xl pl-2 pb-5"> Messages</h4>

    <%= turbo_stream_from "users" %>

    <div id="users" data-controller="user-list">
      <%= render "users/users", users: @users, single_room: @single_room %>
    </div>
  </div>
</div>
