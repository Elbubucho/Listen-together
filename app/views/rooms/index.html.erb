<div id="chatroom_container" class="flex flex-wrap -mx-2">
  <div class="w-full sm:w-1/3 md:w-1/3 px-2">
    <h5  class="font-bold capitalize text-3xl"> <%= current_user.username %></h5>
    <h4 class="font-bold text-1xl"> Messages</h4>

    <%= turbo_stream_from "users" %>

    <div id="users">
      <%= render @users %>
    </div>
  </div>
</div>
