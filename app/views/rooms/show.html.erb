<div id="room_container" data-controller="chat" data-chat-current-user-id-value="<%= current_user.id %>" class="w-full sm:w-1/3 md:w-1/3 px-2">
  <% if @single_room %>
  <div id="single_room">
    <h4 class="text-center py-2">
      Chat with <%= @user&.username || @single_room.name %>
    </h4>
    <%=  turbo_stream_from @single_room %>
    <div id="messages" data-controller="scroll" class="h-200 overflow-y-auto pb-5">
      <%= render @messages %>
    </div>
  </div>

  </div>
  <% end %>
   <%= render 'messages/new_message_form' %>
