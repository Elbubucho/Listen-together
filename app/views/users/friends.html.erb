<div class="mt-30">
  <ul class="list bg-base-100 rounded-box shadow-md">
    <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Friend List</li>

    <% if @friends.any? %>
      <% @friends.each do |friend| %>
        <% friendship = Friendship.find_by(
             "(asker_id = :current AND receiver_id = :friend) OR (asker_id = :friend AND receiver_id = :current)",
             current: current_user.id, friend: friend.id
           ) %>

        <li class="list-row flex items-center gap-4 p-4 border-t border-base-200">
          <div>
            <% if friend.avatar.attached? %>
              <%= cl_image_tag friend.avatar.key, class: "avatar" %>
            <% else %>
              <%= image_tag "default_avatar.png", class: "avatar" %>
            <% end %>
          </div>
          <div>
            <div>
              <%= link_to friend.username.capitalize, user_path(friend), class: "font-semibold hover:underline" %>
            </div>
            <% if friendship %>
              <div class="text-xs uppercase font-semibold opacity-60">
                Friends since <%= time_ago_in_words(friendship.updated_at.to_date) %> ago
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    <% else %>
      <li class="p-4 text-sm text-center text-gray-500">You have no friends yet.</li>
    <% end %>
  </ul>

  <div class="mt-6">
    <%= link_to "← Back to your profile", user_path(current_user), class: "btn btn-outline" %>
  </div>
</div>
