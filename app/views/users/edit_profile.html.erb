<div class="max-w-md mx-auto p-6">
  <h1 class="text-xl font-bold mb-4">Modifier mon profil</h1>
  <%= simple_form_for(current_user, url: user_update_profile_path, html: { method: :patch, data: {turbo: false} }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="mb-4">
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "new-username"},
                    class: "input input-bordered w-full"%>
      </div>

      <div class="mb-4">
      <%= render 'shared/image_preview', form: f %>
      </div>

      <div class="mb-4">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: "textarea textarea-bordered w-full" %>
      </div>

    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
</div>
